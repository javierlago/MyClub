<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/control_panel"
        style="@style/Butons_Style"
        android:padding="10dp"
        android:layout_margin="10dp" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="1"
        android:rowCount="3"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/btn_gestion_atletas_entrenador"
            style="@style/Butons_Style"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:src="@drawable/athlete_button"
                android:layout_weight="1"/>
            <TextView
                style="@style/fields_titles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="@string/atleta"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_gestion_entrenamientos_entrenador"
            style="@style/Butons_Style"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:src="@drawable/list_button"
                android:layout_weight="1"/>
            <TextView
                style="@style/fields_titles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="@string/entrenamientos"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_gestion_publicaciones_entrenador"
            style="@style/Butons_Style"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:src="@drawable/post_button"
                android:layout_weight="1"/>
            <TextView
                style="@style/fields_titles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/publicaciones"/>

        </LinearLayout>

    </GridLayout>
    <include layout="@layout/start_bar"/>



</LinearLayout>